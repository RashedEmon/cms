<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

    <title>All category</title>
</head>
<body>
    <%- include('./header.ejs') %> 
    <div class="category" style="display: flex;">
        <% if(categories){%>
            <% categories.forEach((category)=>{%>
              <div class="categories px-1 py-2" style="width: 100%;" style="  width: 10rem; display: inline-block">
                <div class="card" style="  width: 10rem; display: inline-block">
                    <img src="/<%-category.image%>" width="100%" class="card-img-top" alt="category-<%= category.title%> ">
                    <div class="card-body">
                      <h5 class="card-title text-capitalize"><a href="/posts/<%- category.title %> "><%= category.title %></a> </h5>
                    </div>
                </div>
            </div>
            <% }) %>
            <% } %>  
    </div>
</body>
</html>