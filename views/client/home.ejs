<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <title>Home</title>
    <style>
        *{
            padding: 0xp;
            margin: 0px;
        }
    </style>
</head>
<body> 
  <%- include('./header.ejs') %> 
    <div class="container">
        <div class="row my-5" style="width: 100%; display: flex; justify-content: center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="bd-example">
                    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                      <ol class="carousel-indicators">
                        <% if(featuredPost.length>0){%>
                          <% featuredPost.forEach((post,idx)=>{%>
                            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="<% if(idx === 0) {%>active<% } %>"></li>
                          <% }) %>
                          <% } %>
                      </ol>
                      <div class="carousel-inner">
                        <% if(featuredPost.length>0){%>
                          <% featuredPost.forEach((post,idx)=>{%>
                            <div class="carousel-item <% if(idx === 0) {%>active overflow-hidden<% } %>  ">
                              <img src="<%- post.image %> " class="d-block w-100" alt="post-image" height="20vh" width="100%">
                            </div>
                          <% }) %>
                          <% } %> 
                        
                      </div>
                      <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                  </div>
            </div>
            <div mx-auto class="col-12 col-md-2 col-lg-4 sm:flex sm:mx-auto lg:block md:block">
                
                <% if(featuredPost.length>0){%>
                  <% featuredPost.forEach((post,idx)=>{%>
                    <div class="categories px-1 py-2" style="width: 100%;">
                      <div class="card" style="width: 10rem; display: inline-block">
                          <img src="<%- post.image %> " width="100%" class="card-img-top" alt="<%= post.title %> ">
                          <div class="card-body">
                            <h5 class="card-title text-capitalize"><a href="/post/<%- post.slug %> "><%= post.title %></a> </h5>
                          </div>
                      </div>
                  </div>
                  <% }) %>
                  <% } %> 
            </div>
        </div>
        <div class="row my-5">
            <div class="col-12 col-md-10-col-lg-8">
                <div class="bg-sky-100" style="display: flex; justify-content: space-between">
                    <div class="p-3 text-capitalize">Categories</div>
                    <span class="p-3"><a href="/category">see all</a></span>
                </div>

                <div style="display: flex; overflow-x: scroll;">
                    <% if(categories){%>
                      <% categories.forEach((category)=>{%>
                        <div class="categories px-1 py-2" style="width: 100%;">
                          <div class="card" style="width: 10rem; display: inline-block">
                              <img src="/<%-category.image%>" width="100%" class="card-img-top" alt="category-<%= category.title%> ">
                              <div class="card-body">
                                <h5 class="card-title text-capitalize"><a href="/posts/<%- category.title %> "><%= category.title %></a> </h5>
                              </div>
                          </div>
                      </div>
                      <% }) %>
                      <% } %>    
                </div>

            </div>
        </div>

        <div class="row my-5">
            <div class="col-12 col-md-10-col-lg-8">
                <div class="bg-sky-100" style="display: flex; justify-content: space-between">
                    <div class="p-3 text-capitalize">Latest Post</div>
                </div>

                <div style="display: flex; overflow-x: scroll;">
                    
                  

                <% if(latestPost){%>
                  <% latestPost.forEach((post)=>{%>
                    <div class="categories px-1 py-2" style="width: 100%;">
                      <div class="card" style="width: 10rem; display: inline-block">
                          <img src="/<%-post.image%>" width="100%" class="card-img-top" alt="category-<%= post.title%> ">
                          <div class="card-body">
                            <h5 class="card-title text-capitalize"><a href="/post/<%- post.slug %> "><%= post.title %></a> </h5>
                          </div>
                      </div>
                  </div>
                  <% }) %>
                  <% } %> 
                  
                  

                </div>

            </div>
        </div>

        <% if(categoryWisePost){%>
          <% categoryWisePost.forEach((post)=>{%>
            <div class="row my-5">
              <div class="col-12 col-md-10-col-lg-8">
                  <div class="bg-sky-100" style="display: flex; justify-content: space-between">
                      <div class="p-3 text-capitalize"><%= post.category %> </div>
                      <span class="p-3"><a href="/posts/<%- post.category %> ">see all</a></span>
                  </div>
            
                  <div style="display: flex; overflow-x: scroll;">
                      
                    
            
                  <% if(post.posts.length>0){%>
                    <% post.posts.forEach((p)=>{%>
                      <div class="categories px-1 py-2" style="width: 100%;">
                        <div class="card" style="width: 10rem; display: inline-block">
                            <img src="/<%-p.image%>" width="100%" class="card-img-top" alt="category-<%= p.title%> ">
                            <div class="card-body">
                              <h5 class="card-title text-capitalize"><a href="/post/<%- p.slug %> "><%= p.title %></a> </h5>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                    <% } %> 
                    
                    
            
                  </div>
            
              </div>
            </div>
          <% }) %>
          <% } %> 


    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</body>
</html>


